
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model SelectList

@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Home Page";
}
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

<link href="~/StyleSheet.css" rel="stylesheet" />

<form asp-action="check" asp-controller="Home">
    <section class="vh-100">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-4">
                    <img src="Pic/KRG.png" class="img-fluid" alt="Sample image" />
                    <br />
                    <center>
                        <h6 style="font-family:'Noto Kufi Arabic';margin-top:5px">
                            سيسته‌مى ئامار و ژمێريارى
                            <br />وه‌زاره‌تى كاروبارى شه‌هيدان و ئه‌نفالكراوان
                        </h6>
                    </center>
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    <center>

                        <div class="divider d-flex align-items-center my-4">
                            <h5 style="font-family:'Noto Kufi Arabic'">

                                به‌ڕێوه‌به‌رايه‌تى گشتى خزمه‌تگوزارى
                                <br />كه‌س و كارى شه‌هيدان و ئه‌نفالكراوان و زيندانيانى سياسى
                            </h5>
                        </div>
                        <div class="divider d-flex align-items-center my-4">

                        </div>
                    </center>


                    <div class="form-outline mb-4">
                        <input type="text" name="username" autofocus class="form-control form-control-lg"
                               style="text-align:center" />

                    </div>
                    <div class="form-outline mb-34">

                        <input id="Password1" type="password" name="password"
                               class="form-control form-control-lg"
                               style="text-align:center" />
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">

                        <input type="submit" value="چوونه‌ ژووره‌وه‌" class="form-control form-control-lg"
                               style="padding-left: 2.5rem; padding-right: 2.5rem;
         background-color: rgb(190, 158, 60); color: white;
         font-family: 'Noto Kufi Arabic'" />


                        <br />
                        <center>
                            <Label style="color:gray;font-family:Tahoma;font-size:small"
                                   Text="Label">MOMA © @DateTime.Now.ToString("yyyy")</Label>
                            </center>
                        </div>

                    </div>
                </div>
            </div>

        </section>
    </form>